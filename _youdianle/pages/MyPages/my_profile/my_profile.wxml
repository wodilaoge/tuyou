  <view class="cu-form-group">
		<view class="title">学校简称</view>
		<input class="input text-grey" placeholder="{{userinfo.univname}}" type='text' name="name" bindinput="getunivshort"></input>
    	<image class="icon" src="/img/array.png"></image>
	</view>
  <view class="cu-form-group">
		<view class="title">专业</view>
		<input class="input text-grey" placeholder="{{userinfo.major}}" type='text' name="name" bindinput="getmajor"></input>
    	<image class="icon" src="/img/array.png"></image>
	</view>
  <view class="cu-form-group">
		<view class="title">学生证号</view>
		<input class="input text-grey" placeholder="{{userinfo.studentno}}" type='text' name="name" bindinput="getstudentno"></input>
    	<image class="icon" src="/img/array.png"></image>
	</view>
  <view class="cu-form-group">
		<view class="title">身高</view>
		<input class="input text-grey" placeholder="{{userinfo.height}}" type='text' name="name" bindinput="getheight"></input>
    	<image class="icon" src="/img/array.png"></image>
	</view>
  <view class="cu-form-group">
		<view class="title">体重</view>
		<input class="input text-grey" placeholder="{{userinfo.weight}}" type='text' name="name" bindinput="getweight"></input>
    	<image class="icon" src="/img/array.png"></image>
	</view>
  <view class="cu-form-group">
		<view class="title">活动角色</view>
		<input class="input text-grey" placeholder="{{userinfo.actrole}}" type='text' name="name" bindinput="getactrole"></input>
    	<image class="icon" src="/img/array.png"></image>
	</view>
  <view class="cu-form-group">
		<view class="title">特长</view>
		<input class="input text-grey" placeholder="{{userinfo.speciality}}" type='text' name="name" bindinput="getspeciality"></input>
    	<image class="icon" src="/img/array.png"></image>
	</view>
  <view class="cu-form-group">
		<view class="title">个性签名</view>
		<input class="input text-grey" placeholder="{{userinfo.slogan}}" type='text' name="name" bindinput="getslogan"></input>
    	<image class="icon" src="/img/array.png"></image>
	</view>
  <view class="cu-form-group">
		<view class="title">工作单位</view>
		<input class="input text-grey" placeholder="{{userinfo.workunit}}" type='text' name="name" bindinput="getworkunit"></input>
    	<image class="icon" src="/img/array.png"></image>
	</view>

<view class="text-center margin-top3">
	<checkbox checked class="blue checkicon" ></checkbox>
	<text class="text-grey">我已阅读并同意</text>
	<text class="text-blue">《有点乐活动声明》</text>
  <view class="flex margin-top2">
    <!-- <button class="cu-btn round flex-sub lines-orange padding margin-xs" bindtap="cancel" >取消修改</button> -->
    <button class="cu-btn round flex-sub bg-orange padding margin-xs" bindtap="commit"  data-target="Modal">保存修改</button>
  </view>
</view>
</form>
