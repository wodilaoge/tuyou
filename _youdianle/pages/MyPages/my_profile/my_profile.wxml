<cu-custom bgColor="bg-blue" isBack="{{true}}">
	<view slot="backText">返回</view>
	<view slot="content">个人资料</view>
</cu-custom>
<form>
    <view class="cu-form-group margin-top">
		<view class="title">头像</view>
    <view class="cu-avatar xl round margin-r" bindtap="ChooseImage"  style="background-image:url({{userinfo.head}})"></view>
    
    	<image class="icon" src="/img/array.png"></image>
	</view>
  	<view class="cu-form-group">
		<view class="title">昵称</view>
		<input class="input text-grey" placeholder="{{userinfo.wcalias}}" type='text' name="name" bindinput="getnick"></input>
    	<image class="icon" src="/img/array.png"></image>
	</view>
   <view class="cu-form-group">
		<view class="title">性别</view>
		<picker bindchange="PickerChange" value="{{index}}" range="{{picker}}">
			<view class="picker text-grey">
				{{userinfo.sex==1?'女':'男'}}
			</view>
		</picker>
  </view>
  <view class="cu-form-group">
		<view class="title">姓名</view>
		<input class="input text-grey" placeholder="{{userinfo.name}}" type='text' name="name" bindinput="getname"></input>
    	<image class="icon" src="/img/array.png"></image>
	</view>
  <view class="cu-form-group">
		<view class="title">手机号码</view>
		<input class="input text-grey" placeholder="{{userinfo.mobile}}" type='text' name="name" bindinput="getphone"></input>
    	<image class="icon" src="/img/array.png"></image>
	</view>
  <view class="cu-form-group">
		<view class="title">证件类型</view>
		<input class="input text-grey" placeholder="身份证" type='text' name="name" bindinput="name"></input>
    	<image class="icon" src="/img/array.png"></image>
	</view>
    <view class="cu-form-group">
		<view class="title">证件号码</view>
		<input class="input text-grey" placeholder="{{userinfo.idno}}" type='text' name="name" bindinput="getidno"></input>
    	<image class="icon" src="/img/array.png"></image>
	</view>
  	<view class="cu-form-group">
		<view class="title">出生日期</view>
		<picker mode="date" value="{{userinfo.birthday}}" start="2015-09-01" end="2020-09-01" bindchange="DateChange">
			<view class="picker">
				{{date}}
			</view>
		</picker>
	</view>
  <view class="cu-form-group">
		<view class="title">国籍</view>
		<input class="input text-grey" placeholder="{{userinfo.nationality}}" type='text' name="name" bindinput="getnationality"></input>
    	<image class="icon" src="/img/array.png"></image>
	</view>
