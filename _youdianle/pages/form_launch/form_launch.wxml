    <image class="icon" src="../../img/write.png"></image>
  </view>
  <view class="cu-form-group">
    <view class="title ">场馆</view>
    <input class="input text-grey" placeholder="必填" bindinput="getvenue"></input>
    <image class="icon" src="../../img/write.png"></image>
  </view>

  <view class="cu-form-group">
    <view class="title">报名开始时间</view>
    <picker mode="date" value="{{timenow}}" start="2020.5.1" end="2020.09.01" bindchange="DateChange">
      <view class="picker text-grey">
        {{timenow}}
      </view>
    </picker>
  </view>

  <view class="cu-form-group">
    <view class="title">报名截止时间</view>
    <picker mode="date" value="{{information.signupdeadline}}" start="2015-09-01" end="2020-09-01" bindchange="DateChange2">
      <view class="picker text-grey">
        {{information.signupdeadline}}
      </view>
    </picker>
  </view>

  <view class="cu-form-group margin-top">
    <view class="title">报名方式</view>
    <picker bindchange="PickerChange" value="{{index2}}" range="{{picker}}">
      <view class="picker text-grey">
        {{index2?picker[index2]:'个人报名'}}
      </view>
    </picker>
  </view>
  <view class="cu-form-group">
    <view class="title">参与人数上限</view>
    <input class="input text-grey" value="{{information.entrylimit}}" bindinput="getentity"></input>
    <image class="icon" src="../../img/write.png"></image>
  </view>
  <view class="text-center margin-top3">
    <checkbox-group bindchange="checked">
      <checkbox checked="{{ischecked2}}" class="blue checkicon"></checkbox>
      <text class="text-grey">我已阅读并同意</text>
      <text class="text-blue">《有点乐活动声明》</text>
    </checkbox-group>
    <view class="flex margin-top2">
      <button class="cu-btn round flex-sub lines-orange padding margin-xs" bindtap="cancel">取消活动</button>
      <button class="cu-btn round flex-sub bg-orange padding margin-xs" bindtap="commit" data-target="Modal">补充信息</button>
    </view>

  </view>
