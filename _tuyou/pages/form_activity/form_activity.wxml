<cu-custom bgColor="bg-blue" isBack="{{true}}">
	<view slot="backText">返回</view>
	<view slot="content">发起活动</view>
</cu-custom>
<form>
  <view class="cu-form-group margin-top">
		<view class="title">参赛设置</view>
		<picker bindchange="PickerChange" value="{{index}}" range="{{picker2}}">
			<view class="picker text-grey">
				{{index?picker[index]:'匿名参赛'}}
			</view>
		</picker>
	</view>
  <view class="cu-form-group">
		<view class="title">观众设置</view>
		<picker bindchange="PickerChange" value="{{index}}" range="{{picker3}}">
			<view class="picker text-grey">
				{{index?picker[index]:'观看无需报名'}}
			</view>
		</picker>
	</view>
  <view class="cu-bar bg-white margin-top">
		<view class="action">
			个性规则（图片或文字）
		</view>
		<view class="action">
			{{imgList.length}}/4
		</view>
	</view>
	<view class="cu-form-group">
		<view class="grid col-4 grid-square flex-sub">
			<view class="bg-img" wx:for="{{imgList}}" wx:key="{{index}}" bindtap="ViewImage" data-url="{{imgList[index]}}">
				<image src='{{imgList[index]}}' mode='aspectFill'></image>
				<view class="cu-tag bg-red" catchtap="DelImg" data-index="{{index}}">
					<text class="cuIcon-close"></text>
				</view>
			</view>
			<view class="solids" bindtap="ChooseImage" wx:if="{{imgList.length<4}}">
				<text class="cuIcon-cameraadd"></text>
			</view>
		</view>
	</view>
