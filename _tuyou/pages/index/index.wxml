<view class="bk">

  <view class="text-bold left text-white">同友</view>
</view>

<view class="top-gradul-blue">
  <swiper class="card-swiper round-dot" indicator-dots="true" circular="true" autoplay="true" interval="5000" duration="500" bindchange="cardSwiper" indicator-color="#8799a3" indicator-active-color="#FE538F">
    <swiper-item wx:for="{{swiperList}}" wx:key class="{{cardCur==index?'cur':''}}">
      <view class="swiper-item">
        <image src="{{item.path}}" mode="aspectFill"></image>
      </view>
    </swiper-item>
  </swiper>
</view>
<view class="padding bg-white">
  <view class="flex">

    <view class="flex-sub bg-grey padding-sm margin-xs radius">新闻</view>
    <view class="flex-sub bg-grey padding-sm margin-xs radius" bindtap="toxiaoyuan">校园活动</view>
    <view class="flex-sub bg-grey padding-sm margin-xs radius" bindtap="tosport">运动</view>
    <view class="flex-sub bg-grey padding-sm margin-xs radius">文娱</view>
    <view class="flex-sub bg-grey padding-sm margin-xs radius">爱好</view>
    <view class="flex-sub bg-grey padding-sm margin-xs radius">视频</view>
  </view>
</view>

<view class="bg-white padding margin-top ">
  <text class="cu-bar-title text-bold text-black ">新闻</text>
  <image class="icon" src="../../img/array.png"></image>
</view>
<view class="cu-card article no-card bg-white" wx:for="{{news.list}}">
  <view class="cu-item shadow" style="margin-top:0rpx;">
    <view class="content2">
      <image src="/img/huodongxinwen1.png" mode="aspectFill"></image>
      <view class="desc">
        <view class="title-limit2">
          {{item.title}}
        </view>
        <button class="cu-btn btn-new bg-orange disabled">最新</button>
        <view>
          <text class="text-gery">2分钟前</text>
          <text class="cuIcon-attention lg text-gray text-right" decode="{{true}}">\t23456</text>
        </view>
      </view>
    </view>
    <view class="white"></view>
  </view>
</view>

<view class="bg-white padding margin-top ">
  <text class="cu-bar-title text-bold text-black ">校园活动</text>
  <image class="icon2" src="../../img/array.png"></image>
</view>
